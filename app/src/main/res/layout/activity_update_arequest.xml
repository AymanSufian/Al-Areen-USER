<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_A_Request">

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/catimage"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/requestareview" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/akaya_telivigala"
            android:gravity="center"
            android:text="If you want to modify your schedule !             Just re-execute your reservation."
            android:textColor="@color/navbar"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/alata"
            android:gravity="left"
            android:hint="Patient Name"
            android:inputType="text"
            android:textColor="@color/navbar"
            android:textColorHint="@color/navbar" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/alata"
            android:hint=" your injury place"
            android:inputType="text"
            android:textColor="@color/navbar"
            android:textColorHint="@color/navbar" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"

            android:fontFamily="@font/alata"
            android:hint=" your injury description"
            android:inputType="text"
            android:textColor="@color/navbar"
            android:textColorHint="@color/navbar" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:focusable="false"
            android:fontFamily="@font/alata"
            android:hint="Choose your calender"
            android:inputType="text"
            android:textColor="@color/navbar"
            android:textColorHint="@color/navbar" />


        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="195dp"
            android:layout_height="36dp"
            android:focusable="false"
            android:fontFamily="@font/alata"
            android:hint="Choose your hour"
            android:inputType="text"
            android:textColor="@color/navbar"
            android:textColorHint="@color/navbar"
            android:textSize="19dp" />

            <Spinner
                android:id="@+id/date1"
                android:layout_width="195dp"
                android:layout_height="43dp"
                android:background="@drawable/b_g_spinner"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/updateinfo"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:text="submit"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/navbar"
            app:cornerRadius="@dimen/fab_margin" />




    </LinearLayout>


</ScrollView>