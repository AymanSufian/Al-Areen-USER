<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MENU.HelpsPostureProblems">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="center"
                android:text="Guide to Good Posture"
                android:textColor="@color/navbar"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="Good posture is about more than standing up straight so you can look your best. It is an important part of your long-term health. Making sure that you hold your body the right way, whether you are moving or still, can prevent pain, injuries, and other health problems."
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="left"
                android:text="What is posture ?"
                android:textColor="@color/navbar"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="- Dynamic posture is how you hold yourself when you are moving, like when you are walking, running, or bending over to pick up something."
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="- Static posture is how you hold yourself when you are not moving, like when you are sitting, standing, or sleeping."
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="left"
                android:text="How can posture affect my health ?"
                android:textColor="@color/navbar"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="1- Misalign your musculoskeletal system"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="2- Wear away at your spine, making it more fragile and prone to injury"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="3- Cause neck, shoulder, and back pain"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="4- Decrease your flexibility"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="5- Affect how well your joints move"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="6- Affect your balance and increase your risk of falling"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="7- Make it harder to digest your food"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="8- Make it harder to breathe"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="left"
                android:text="How can I improve my posture in general ?"
                android:textColor="@color/navbar"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="1- Be mindful of your posture during everyday activities, like watching television, washing dishes, or walking"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="2- Stay active. Any kind of exercise may help improve your posture, but certain types of exercises can be especially helpful. They include yoga, tai chi, and other classes that focuses on body awareness. It is also a good idea to do exercises that strengthen your core (muscles around your back, abdomen, and pelvis)."
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="3- Maintain a healthy weight. Extra weight can weaken your abdominal muscles, cause problems for your pelvis and spine, and contribute to low back pain. All of these can hurt your posture."
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="4- Wear comfortable, low-heeled shoes. High heels, for example, can throw off your balance and force you to walk differently. This puts more stress on your muscles and harms your posture."
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="5- Make sure work surfaces are at a comfortable height for you, whether you're sitting in front of a computer, making dinner, or eating a meal."
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="left"
                android:text="How can I improve my posture when sitting ?"
                android:textColor="@color/navbar"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="Switch sitting positions often and Take brief walks around your office or home
 and Gently stretch your muscles every so often to help relieve muscle tension
 and Don't cross your legs; keep your feet on the floor, with your ankles in front of your knees"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="187dp"
        android:layout_height="164dp"
        android:src="@drawable/mansitting" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="164dp"
        android:src="@drawable/womansitting" />

        </LinearLayout>

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/akaya_telivigala"
                android:gravity="left"
                android:text="How can I improve my posture when standing ?"
                android:textColor="@color/navbar"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alata"
                android:gravity="left"
                android:text="Stand up straight and tall and Keep your shoulders back and Pull your stomach in and Put your weight mostly on the balls of your feet and Keep your head level Let your arms hang down naturally at your sides and Keep your feet about shoulder-width apart"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="187dp"
                    android:layout_height="164dp"
                    android:src="@drawable/manstanding" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="164dp"
                    android:src="@drawable/womanstanding" />

            </LinearLayout>

        </LinearLayout>
</ScrollView>